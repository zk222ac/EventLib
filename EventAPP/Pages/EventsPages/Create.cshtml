@page
@model EventAPP.Pages.EventsPages.CreateModel
@{
}
<h1> Create a new event  </h1>
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group">

                <label asp-for="@Model.Id" class="control-label">Event Id</label><br>
                <input asp-for="@Model.Id" class="form-control"/><br>
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
                </div>

                <div class="form-group">    
                <label asp-for="@Model.Name" class="control-label">Event name</label><br>
                <input asp-for="@Model.Name" class="form-control" /><br>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="@Model.Description" class="control-label">Event description</label><br>
                <input asp-for="@Model.Description" class="form-control" /><br>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.EventSlags" class="control-label">Event type</label><br>
                    <select asp-for="EventSlags" class="form-control"><br>
                    @foreach(var eve in Model.EventsTyper)
                    {
                        <option value="@eve">@eve</option>
                    }
                    </select>
                </div><br>

                <div class="form-group">
                <label asp-for="@Model.Date" class="control-label">Event Id</label><br>
                <input asp-for="@Model.Date" class="form-control" /><br>
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>
                



            <div class="form-group">
                <input type="submit" value="Opret et event" />
            </div>
        </form>
    </div>
</div>